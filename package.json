{
  "name": "orh-electron-kiosk",
  "version": "1.0.3",
  "description": "OneRoom Health Electron Kiosk Application",
  "main": "electron/main-kiosk.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false&& electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "kiosk",
    "healthcare"
  ],
  "author": "OneRoom Health",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.oneroomhealth.kiosk",
    "productName": "OneRoom Health Kiosk",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electron/icon.icns",
      "category": "public.app-category.healthcare-fitness"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "electron/icon.png",
      "category": "Office"
    }
  }
}